<tr>
  <td>#</td>
  <td><%= group.title %></td>
  <td><%= render_group_description(group) %></td>
  <td><%= group.user.email %></td>
  <td>
    <% if current_user && group.user == current_user %>
    <%= link_to("Edit",edit_group_path(group),class: "btn btn-sm btn-default") %>
    <%= link_to("Delete",group_path(group), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-default")%>
    <% end %>
  </td>
</tr>
